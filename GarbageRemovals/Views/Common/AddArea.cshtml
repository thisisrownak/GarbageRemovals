@model GarbageRemovals.ViewModels.AreaVM

@{
    ViewData["Title"] = "AddArea";
}

<h1>Add Area</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="AddArea" class="card p-4 shadow">
            <input asp-for="Area.Id" type="hidden"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Area.Name" class="control-label"></label>
                <input asp-for="Area.Name" class="form-control"/>
                <span asp-validation-for="Area.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Area.City" class="control-label"></label>
                <input asp-for="Area.City" class="form-control"/>
                <span asp-validation-for="Area.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Area.Country" class="control-label"></label>
                <input asp-for="Area.Country" class="form-control"/>
                <span asp-validation-for="Area.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
    <div class="">

    </div>
</div>
<div class="row">
    @*<partial name="AreaList.cshtml" />*@
    @Html.Partial("AreaList.cshtml",Model.AreaList)
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    window.onload = function () {
        var cookie = getCookie('manager');
        if (cookie == null) {
            window.location.href='/user/managerlogin';
        }
    }
</script>