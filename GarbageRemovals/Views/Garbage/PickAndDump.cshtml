@model GarbageRemovals.ViewModels.PickAndDumpVM

@{
    ViewData["Title"] = "PickAndDump";
}

<h1>Pick And Dump</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="PickAndDump" class="card shadow p-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PickedAndDump.Amount" class="control-label"></label>
                <input asp-for="PickedAndDump.Amount" class="form-control" />
                <span asp-validation-for="PickedAndDump.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PickedAndDump.RequestId" class="control-label"></label>
                <select asp-for="PickedAndDump.RequestId" class ="form-control" asp-items="Model.RequestList"></select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="row">
    @Html.Partial("PickAndDumpList.cshtml",Model.PickedAndDumpList)
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    window.onload = function () {
        var cookie = getCookie('manager');
        if (cookie == null) {
            window.location.href='/user/managerlogin';
        }
    }
</script>