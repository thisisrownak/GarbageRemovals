<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Garbage Removals</title>
    <link href="~/plugins/fontawesome-free/css/all.css" rel="stylesheet" />
    <link href="~/css/ionicons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <link rel="stylesheet" href="~/plugins/jqvmap/jqvmap.min.css">
    <link rel="stylesheet" href="~/css/adminlte.min.css">
    <link rel="stylesheet" href="~/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <link rel="stylesheet" href="~/plugins/daterangepicker/daterangepicker.css">
    <link rel="stylesheet" href="~/plugins/summernote/summernote-bs4.css">
    <link href="~/css/forntawasam.css" rel="stylesheet" />
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/js.cookie.min.js"></script>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                
            </ul>

            <!-- SEARCH FORM -->
            <form class="form-inline ml-3">
                <div class="input-group input-group-sm">
                    <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
                    <div class="input-group-append">
                        <button class="btn btn-navbar" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Messages Dropdown Menu -->
                <!-- Notifications Dropdown Menu -->
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="fas fa-user"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right text-center">

                        <a class="dropdown-item">
                            <p><b id="userName"></b></p>
                            <p id="userEmail"></p>
                        </a>
                        <div class="dropdown-item">
                            <div class="align-content-center">
                                <div id="btnManager">
                                    <a asp-controller="User" asp-action="ManagerLogout" class="btn btn-danger">Logout</a>
                                </div>
                                <div id="btnUser">
                                    <a asp-controller="User" asp-action="Logout" class="btn btn-danger">Logout</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="#" class="brand-link">
                <img src="~/image/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light">GARBAGE REMOVER</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                @*<div class="user-panel mt-3 pb-3 mb-3 d-flex">
                        <div class="image">
                            <img src="~/image/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                        </div>
                        <div class="info">
                            <a href="#" class="d-block">Alexander Pierce</a>
                        </div>
                    </div>*@

                <!-- Sidebar Menu -->
                <nav class="mt-2" id="userNav">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                                with font-awesome or any other icon font library -->
                        <li class="nav-item  menu-open">
                            <a asp-controller="Garbage" asp-action="Index" class="nav-link active">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Dashboard
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="PickRequest" asp-controller="Garbage" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                    Pick Request
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="RequestListforUser" asp-controller="Garbage" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                    Request List
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Profile" asp-controller="User" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                    Profile
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <nav class="mt-2" id="managerNav">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item  menu-open">
                            <a asp-controller="Garbage" asp-action="Dashboard" class="nav-link active">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Dashboard
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="PickAndDump" asp-controller="Garbage" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                    Pick And Dump
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="AddManager" asp-controller="Common" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                    Add Manager
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="ManagerListView" asp-controller="Common" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                   Manager List
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="AddDumpStation" asp-controller="Common" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                    Add Station
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="DumpStationListView" asp-controller="Common" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                    Station List
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="AreaListView" asp-controller="Common" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                    Area List
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="AddArea" asp-controller="Common" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                    Add Area
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <div class="content-wrapper">
            <main role="main" class="p-lg-2">
                @RenderBody()
            </main>
        </div>
    </div>
    <footer class="border-top footer text-muted fixed-bottom">
        <div class="container">
            &copy; 2020 - Garbage Removals
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script src="~/plugins/jquery-ui/jquery-ui.min.js"></script>
    <script>
        $.widget.bridge('uibutton', $.ui.button)
    </script>
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/plugins/chart.js/Chart.min.js"></script>
    <script src="~/plugins/sparklines/sparkline.js"></script>
    <script src="~/plugins/jqvmap/jquery.vmap.min.js"></script>
    <script src="~/plugins/jqvmap/maps/jquery.vmap.usa.js"></script>
    <script src="~/plugins/jquery-knob/jquery.knob.min.js"></script>
    <script src="~/plugins/moment/moment.min.js"></script>
    <script src="~/plugins/daterangepicker/daterangepicker.js"></script>
    <script src="~/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="~/plugins/summernote/summernote-bs4.min.js"></script>
    <script src="~/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <script src="~/js/adminlte.js"></script>
    <script src="~/js/pages/dashboard.js"></script>
    <script src="~/js/demo.js"></script>
</body>
</html>
<script>
    $(document).ready(function () {
        var cookie = getCookie('user');
        var cookieName = getCookie('userName');
        var cookieM = getCookie('manager');
        var cookieMName = getCookie('managerName');
        if (cookie !== null) {
            //.getElementById("userName").value = cookieName;
            //document.getElementById("userEmail").value = cookie;
            $("#userName").append(decodeURI(cookieName));
            $("#userEmail").append(decodeURI(cookie).replace('%40', '@@'));
            $("#userNav").show();
            $("#managerNav").hide();
            $("#btnManager").hide();
            $("#btnUser").show();
        }

        if (cookieM !== null) {
           // document.getElementById("userName").value = cookieMName;
            //document.getElementById("userEmail").append = cookieM;
            $("#userName").append(decodeURI(cookieMName));
            $("#userEmail").append(decodeURI(cookieM).replace('%40', '@@'));
            $("#userNav").hide();
            $("#managerNav").show();
            $("#btnUser").hide();
            $("#btnManager").show();

        }

    });
</script>

